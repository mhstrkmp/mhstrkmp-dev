---
import type { HTMLAttributes } from 'astro/types'
interface Props extends HTMLAttributes<'a'> {
    isInternal?: boolean
}

const { href, isInternal, ...attrs } = Astro.props
const defaultAttrs = {
    target: isInternal ? '_self' : '_blank',
    rel: isInternal ? undefined : 'noopener noreferrer',
}
---

<a
    href={href}
    {...attrs}
    {...defaultAttrs}
    class='hover:text-fuchsia-500 transition duration-250 ease-out hover:ease-in'
>
    <slot />
</a>
